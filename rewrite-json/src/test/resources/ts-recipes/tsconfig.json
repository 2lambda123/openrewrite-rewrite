{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "outDir": "js",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es5",
    "module": "es6",
    "typeRoots": ["./types"],
    "noEmit": false,
    "noEmitOnError": false,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "include": ["ts/*.ts", "node_modules/@openrewrite/types/**/*.ts", "jest/*.ts"]
}
